extends layout


block main
  main(class='resume')
    img(class='resume border', src=content.resume.image.src, alt=content.resume.image.alt)
    footer(class='download')
      h4 #[span(class='glyphicon glyphicon-download', aria-hidden='true')] #{content.resume.download.title} #[span(class='glyphicon glyphicon-download', aria-hidden='true')]
      ul
        each format in content.resume.download.formats
          li
            a(class='btn border', title=format.title, type=format.type, href=format.href, download=format.download)=format.text


block script
